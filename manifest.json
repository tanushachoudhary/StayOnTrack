{
  "manifest_version": 3,
  "name": "StayOnTrack - Enhanced Pomodoro Timer with Site Blocker",
  "version": "1.0",
  "description": "A Pomodoro timer that blocks distracting websites during focus sessions",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "declarativeNetRequest",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Pomodoro Timer",
    "default_icon": {
      "16": "icons/16.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "blocked_sites",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "icons": {
    "16": "icons/16.png"
  }
}
